<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SenacIntegra.Cadastro">

    <ScrollView>
        <VerticalStackLayout 
            Padding="30"
            Spacing="15"
            HorizontalOptions="Center"
            VerticalOptions="Center">

            <!-- Container central -->
            <VerticalStackLayout WidthRequest="350"
                                 Spacing="12">

                <Image Source="estud.jpg"
                       WidthRequest="130"
                       HeightRequest="130"
                       HorizontalOptions="Center"/>

                <Label Text="Tela de Cadastro"
                       FontSize="28"
                       FontAttributes="Bold"
                       TextColor="CornflowerBlue"
                       HorizontalTextAlignment="Center"
                       Margin="0,10,0,20"/>

                <!-- Primeiro Nome -->
                <Label Text="Primeiro Nome" FontAttributes="Bold"/>
                <Entry x:Name="entryPrimeiroNome"
                       Placeholder="Primeiro Nome"
                       HeightRequest="45"/>

                <!-- Sobrenome -->
                <Label Text="Sobrenome" FontAttributes="Bold"/>
                <Entry x:Name="entrySobrenome"
                       Placeholder="Sobrenome"
                       HeightRequest="45"/>

                <!-- CPF -->
                <Label Text="CPF" FontAttributes="Bold"/>
                <Entry x:Name="entryCPF"
                       Placeholder="***.***.***-**"
                       Keyboard="Numeric"
                       HeightRequest="45"/>

                <!-- Telefone -->
                <Label Text="Telefone" FontAttributes="Bold"/>
                <Entry x:Name="entryTelefone"
                       Placeholder="(DDD) 99999-9999"
                       Keyboard="Telephone"
                       HeightRequest="45"/>

                <!-- Email -->
                <Label Text="Email" FontAttributes="Bold"/>
                <Entry x:Name="entryEmail"
                       Placeholder="exemplo@exemplo.com.br"
                       Keyboard="Email"
                       HeightRequest="45"/>

                <!-- Senha -->
                <Label Text="Senha" FontAttributes="Bold"/>
                <Entry x:Name="entrySenha"
                       Placeholder="******"
                       IsPassword="True"
                       HeightRequest="45"/>

                <!-- Confirmar Senha -->
                <Label Text="Confirmar Senha" FontAttributes="Bold"/>
                <Entry x:Name="entryConfirmarSenha"
                       Placeholder="******"
                       IsPassword="True"
                       HeightRequest="45"/>

                <!-- Botão -->
                <Button Text="Cadastrar"
                        FontAttributes="Bold"
                        BackgroundColor="DarkOrange"
                        TextColor="White"
                        HeightRequest="50"
                        CornerRadius="10"
                        Margin="0,20,0,0"
                        Clicked="OnCadastrarClicked"/>

            </VerticalStackLayout>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>