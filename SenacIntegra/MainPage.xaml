<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"

             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"

             x:Class="SenacIntegra.MainPage"

             BackgroundColor="#F3F6FF">
    
        <Grid RowDefinitions="Auto,*" Padding="20">

        <!-- Barra superior -->
        <Grid Grid.Row="0"

              Padding="10,20"

              ColumnDefinitions="Auto,*"

              BackgroundColor="#1E4DD8">
            <Image Source="logo_portal.png"

                   WidthRequest="40"

                   HeightRequest="40"

                   Margin="0,0,10,0" />
            <StackLayout>
                <Label Text="Portal Acadêmico"

                       TextColor="White"

                       FontAttributes="Bold"

                       FontSize="20" />
                <Label Text="Sistema de Gestão Estudantil"

                       TextColor="#E0E7FF"

                       FontSize="12" />
            </StackLayout>
        </Grid>

        <!-- Conteúdo principal -->
        <ScrollView Grid.Row="1">
            <Grid RowDefinitions="Auto,Auto,Auto,Auto,Auto"

                  ColumnDefinitions="*"

                  RowSpacing="20"

                  Margin="0,20,0,0">

                <!-- Título -->
                <StackLayout Grid.Row="0">
                    <Label Text="Desempenho Acadêmico"

                           FontAttributes="Bold"

                           FontSize="22"

                           TextColor="#111827" />
                    <Label Text="Visualize suas avaliações, médias e histórico acadêmico"

                           FontSize="13"

                           TextColor="#6B7280" />
                </StackLayout>

                <!-- Cards superiores com Border -->
                <Grid Grid.Row="1"

                      ColumnDefinitions="*,*,*"

                      ColumnSpacing="12">

                    <Border Grid.Column="0"

                            BackgroundColor="White"

                            Padding="15">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="12" />
                        </Border.StrokeShape>
                        <Border.Shadow>
                            <Shadow Brush="Black"

                                    Opacity="0.15"

                                    Radius="10" />
                        </Border.Shadow>

                        <StackLayout>
                            <Label Text="Avaliação Geral"

                                   FontSize="13"

                                   TextColor="#6B7280" />
                            <Label Text="A"

                                   FontSize="28"

                                   FontAttributes="Bold"

                                   TextColor="#16A34A" />
                            <Label Text="Atendido"

                                   FontSize="12"

                                   TextColor="#16A34A" />
                        </StackLayout>
                    </Border>

                    <Border Grid.Column="1"

                            BackgroundColor="White"

                            Padding="15">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="12" />
                        </Border.StrokeShape>
                        <Border.Shadow>
                            <Shadow Brush="Black"

                                    Opacity="0.15"

                                    Radius="10" />
                        </Border.Shadow>

                        <StackLayout>
                            <Label Text="Disciplinas Cursadas"

                                   FontSize="13"

                                   TextColor="#6B7280" />
                            <Label Text="12"

                                   FontSize="28"

                                   FontAttributes="Bold"

                                   TextColor="#1D4ED8" />
                        </StackLayout>
                    </Border>

                    <Border Grid.Column="2"

                            BackgroundColor="White"

                            Padding="15">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="12" />
                        </Border.StrokeShape>
                        <Border.Shadow>
                            <Shadow Brush="Black"

                                    Opacity="0.15"

                                    Radius="10" />
                        </Border.Shadow>

                        <StackLayout>
                            <Label Text="Faltas Totais"

                                   FontSize="13"

                                   TextColor="#6B7280" />
                            <Label Text="12"

                                   FontSize="28"

                                   FontAttributes="Bold"

                                   TextColor="#F59E0B" />
                            <Label Text="15% de faltas"

                                   FontSize="12"

                                   TextColor="#F59E0B" />
                        </StackLayout>
                    </Border>
                </Grid>

                <!-- Avisos -->
                <Border Grid.Row="2"

                        BackgroundColor="#FEF3C7"

                        Padding="12">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="10" />
                    </Border.StrokeShape>
                    <Label Text="Atenção: Você possui 15% de faltas. O limite máximo é 25% para aprovação."

                           FontSize="13"

                           TextColor="#92400E" />
                </Border>

                <Border Grid.Row="3"

                        BackgroundColor="#FEE2E2"

                        Padding="12">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="10" />
                    </Border.StrokeShape>
                    <Label Text="Disciplina em Risco: Redes de Computadores – 22% de faltas."

                           FontSize="13"

                           TextColor="#B91C1C" />
                </Border>

                <!-- Disciplinas -->
                <StackLayout Grid.Row="4" Spacing="12">
                    <Label Text="Avaliações e Frequência por Disciplina"

                           FontAttributes="Bold"

                           FontSize="18"

                           TextColor="#111827" />

                    <Border BackgroundColor="White" Padding="12">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="12" />
                        </Border.StrokeShape>
                        <Border.Shadow>
                            <Shadow Brush="Black"

                                    Opacity="0.15"

                                    Radius="10" />
                        </Border.Shadow>

                        <StackLayout>
                            <Label Text="Algoritmos e Programação"

                                   FontAttributes="Bold"

                                   FontSize="15"

                                   TextColor="#111827" />
                            <Label Text="P1: A | P2: A | Trabalho: A"

                                   FontSize="12"

                                   TextColor="#6B7280" />
                            <Label Text="Presente • Faltas: 2 (5%)"

                                   FontSize="12"

                                   TextColor="#16A34A" />
                        </StackLayout>
                    </Border>

                    <Border BackgroundColor="White" Padding="12">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="12" />
                        </Border.StrokeShape>
                        <Border.Shadow>
                            <Shadow Brush="Black"

                                    Opacity="0.15"

                                    Radius="10" />
                        </Border.Shadow>

                        <StackLayout>
                            <Label Text="Banco de Dados"

                                   FontAttributes="Bold"

                                   FontSize="15"

                                   TextColor="#111827" />
                            <Label Text="P1: PA | P2: A | Trabalho: A"

                                   FontSize="12"

                                   TextColor="#6B7280" />
                            <Label Text="Presente • Faltas: 4 (10%)"

                                   FontSize="12"

                                   TextColor="#16A34A" />
                        </StackLayout>
                    </Border>
                </StackLayout>
            </Grid>
        </ScrollView>
    </Grid>
</ContentPage>

 